<header class="bg-white border-b border-gray-100 fixed flex justify-between left-0 shadow-md top-0 w-full z-10">
  <a
    class="hidden no-underline p-4 text-gray-600 hover:text-gray-800 md:inline-block"
    href="/"
    title="Go to the home page"
  >
    <span class="font-bold text-xl">{{ site.name }}</span>
    {% if site.subtitle %}
      <span class="block text-xs lg:text-base w-full">{{ site.subtitle }}</span>
    {% endif %}
  </a>

  <div class="flex p-4 w-full md:w-auto">
    <div class="relative w-full md:w-auto">
      <input
        aria-label="Search"
        class="bg-gray-50 border border-gray-300 leading-tight p-2 placeholder-gray-400 rounded w-60 focus:ring-4 focus:ring-blue-200 focus:ring-opacity-50"
        id="searchField"
        placeholder="Search..."
      />
      <ul
        class="absolute bg-white flex-col hidden py-2 rounded shadow-lg text-gray-500 w-full"
        id="searchResults"
        tabindex="0"
      ></ul>
      <div
        class="absolute bg-white divide-gray-300 divide-y hidden left-0 p-4 rounded shadow-md text-gray-500 top-100 z-2 md:right-0"
        id="noResultsFound"
      >
        <p>No results found.</p>
      </div>
    </div>

    <button
      aria-label="Open menu"
      class="block ml-auto p-2 text-gray-400 hover:text-gray-900 md:hidden"
      id="menu-open"
      title="Show wiki menu"
    >
      <img
        alt="Open menu icon"
        class="fill-current"
        inline
        src="/assets/images/menu.svg"
      />
    </button>
  </div>
</header>